{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Workspace",
            "type": "shell",
            "command": "bash -i -c 'cd ws && catkin_make'",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        {
            "label": "Create Package",
            "type": "shell",
            "command": "bash -i -c 'cd ws/src && catkin_create_pkg ${input:packageName} ${input:dependingPackages}'",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Roscore",
            "type": "shell",
            "options": {
                "env": {
                    "ROS_IP": "${input:rosMasterIp}",
                    "ROS_MASTER_URI": "http://${input:rosMasterIp}:11311",
                }
            },
            "command": "bash -i -c roscore",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
    ],
    "inputs": [
        {
            "id": "packageName",
            "type": "promptString",
            "description": "Please enter the name of new package"
        },
        {
            "id": "dependingPackages",
            "type": "promptString",
            "description": "Please enter name of depending packages",
            "default": "roscpp std_msgs"
        },
        {
            "id": "rosMasterIp",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "hostname -I | tr ' ' '\n'",
                "useSingleResult": true,
                "description": "Select the IP address of the master",
            }
        }
    ]
}