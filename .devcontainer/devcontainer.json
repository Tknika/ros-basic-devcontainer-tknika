{
  "name": "ROS development environment by Tknika",
  "dockerFile": "Dockerfile",
  "remoteUser": "nonroot",
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}"
  },
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
  ],
  "runArgs": [
    "--privileged",
    "--network=host"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "spencerwmiles.vscode-task-buttons",
      ]
    }
  }
}